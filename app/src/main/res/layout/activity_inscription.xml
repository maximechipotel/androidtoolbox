<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InscriptionActivity">

    <CheckedTextView
        android:id="@+id/inscription_ID_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Identifiant"
        app:layout_constraintBottom_toTopOf="@+id/inscription_mdp_et"
        app:layout_constraintEnd_toEndOf="@+id/inscription_mdp_et"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/inscription_mdp_et" />

    <CheckedTextView
        android:id="@+id/inscription_mdp_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_isen" />

    <Button
        android:id="@+id/button_confirmer_inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="#DB0011"
        android:shadowColor="#FFFFFF"
        android:text="Confirmer"
        android:textColor="#F3F3F3"
        app:layout_constraintEnd_toEndOf="@+id/inscription_mdp_et"
        app:layout_constraintStart_toStartOf="@+id/inscription_mdp_et"
        app:layout_constraintTop_toBottomOf="@+id/inscription_mdp_et" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#DB0011"

        android:shadowColor="#FFFFFF"
        android:text="Save"
        android:textColor="#F3F3F3"
        app:layout_constraintEnd_toEndOf="@+id/button_confirmer_inscription"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_confirmer_inscription"
        app:layout_constraintTop_toBottomOf="@+id/button_confirmer_inscription" />

</androidx.constraintlayout.widget.ConstraintLayout>