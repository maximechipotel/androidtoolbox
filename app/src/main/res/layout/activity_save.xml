<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".SaveActivity">

    <EditText
        android:id="@+id/birth_et"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="5"
        android:inputType="date"
        android:text="Date de Naissance"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/last_name_et"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/last_name_et"
        app:layout_constraintTop_toBottomOf="@+id/last_name_et" />

    <TextView
        android:id="@+id/Formulaire_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Formulaire"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />

    <EditText
        android:id="@+id/first_name_et"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="PrÃ©nom"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/Formulaire_TV"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/Formulaire_TV"
        app:layout_constraintTop_toBottomOf="@+id/Formulaire_TV" />

    <EditText
        android:id="@+id/last_name_et"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nom"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/first_name_et"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="@+id/first_name_et"
        app:layout_constraintTop_toBottomOf="@+id/first_name_et" />

    <Button
        android:id="@+id/button_save_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/birth_et"
        app:layout_constraintStart_toStartOf="@+id/birth_et"
        app:layout_constraintTop_toBottomOf="@+id/birth_et" />

    <Button
        android:id="@+id/button_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Display"
        app:layout_constraintEnd_toEndOf="@+id/button_save_json"
        app:layout_constraintStart_toStartOf="@+id/button_save_json"
        app:layout_constraintTop_toBottomOf="@+id/button_save_json" />


</androidx.constraintlayout.widget.ConstraintLayout>